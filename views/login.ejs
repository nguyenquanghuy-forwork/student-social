<body>
    </form>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic" data-tilt>
                    <img src="https://img.icons8.com/clouds/452/web-laptop.png" alt="IMG">
                </div>
                <form class="login100-form" name="myForm" method="post" action="/login" onsubmit="">
                    <span class="login100-form-title">
						Hệ Thống Thông Tin Sinh Viên
					</span>
                    <div class="wrap-input100" id="emailtest" data-validate="Valid email is required: @student.tdtu.edu.vn">
                        <input class="input100" type="text" name="username" placeholder="User Name - Student Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
                    </div>
                    <div class="wrap-input100" data-validate="Password is required">
                        <input class="input100" type="password" name="password" placeholder="Password">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
							<i class="fa fa-lock" aria-hidden="true"></i>
						</span>
                    </div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
							Login
						</button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
							Sign with:
						</span>
                        <a href="/auth/google" class="btn-google m-b-20">
                            <img src="https://img.icons8.com/clouds/2x/google-logo.png" alt="GOOGLE"> Google
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <p class="txt2" href="#">
                            Phát triển bởi NQHuy - LTLộc ©NoCopy!
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>




